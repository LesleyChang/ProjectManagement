@model ProjectManager.Models.ProjectMemberScoreVM
@{
    ViewBag.Title = "成員評分細項";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="card bg-light mb-3" style="max-width: 18rem;">
                <div class="card-header">表現最高占比</div>
                <div class="card-body">
                    <h5 class="card-title">25%</h5>
                    <p class="card-text">幾個員工</p>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card bg-light mb-3" style="max-width: 18rem;">
                <div class="card-header">表現平均之上占比</div>
                <div class="card-body">
                    <h5 class="card-title">50%</h5>
                    <p class="card-text">幾個員工</p>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card bg-light mb-3" style="max-width: 18rem;">
                <div class="card-header">表現平均之下占比</div>
                <div class="card-body">
                    <h5 class="card-title">25%</h5>
                    <p class="card-text">幾個員工</p>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card bg-light mb-3" style="max-width: 18rem;">
                <div class="card-header">尚未評分占比</div>
                <div class="card-body">
                    <h5 class="card-title">0%</h5>
                    <p class="card-text">幾個員工</p>
                </div>
            </div>
        </div>
    </div>
</div>


    <table class="table table-bordered" style="margin: 0px auto;" >
        <thead>
            <tr>
                <th>團隊成員</th>
                <th>PM評分紀錄</th>
                <th>自評紀錄</th>
                <th>表現等級</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var _member in Model.GroupMembersScore)
            {
                foreach (var item in _member.value)
                {
                    <tr>
                        <td>@item.Employee.EmployeeName</td>
                        <td>@item.PMscore</td>
                        <td>@item.Selfscore</td>
                        <td>評價等級</td>
                    </tr>
                }
            }
        </tbody>
    </table>

