@model IEnumerable<ProjectManager.Models.Tasks>
@{
    ViewBag.Title = "任務";
}

<a href="~/Tasks/Insert" class="btn btn-warning">新增任務</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>任務編號</th>
            <th>直屬任務名稱</th>
            <th>任務名稱</th>
            <th>預計開始日期</th>
            <th>預計結束日期</th>
            <th>實際開始日期</th>
            <th>實際結束日期</th>
            <th>預計工作時間</th>
            <th>實際工作時間</th>
            <th>標籤</th>
            <th>描述</th>
            <th>修改</th>
            <th>刪除</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var _tasks in Model)
        {
        <tr>
            <td>@_tasks.TaskID</td>
            <td>
                @if (@_tasks.ParentTaskGUID != null)
                {
                    @_tasks.ProjectGUID
                }
                else
                {
                    <text>-</text>
                }
            </td>
            <td>@_tasks.TaskName</td>
            <td>@_tasks.EstStartDate</td>
            <td>@_tasks.EstEndDate</td>
            <td>@_tasks.StartDate</td>
            <td>@_tasks.EndDate</td>
            <td>@_tasks.EstWorkTime</td>
            <td>@_tasks.WorkTime</td>
            <td>@_tasks.Tag</td>
            <td>@_tasks.Description</td>
            <td><a href="~/Permissions/Edit/@_tasks.TaskGUID" class="btn btn-info">修改</a></td>
            <td><a href="~/Permissions/Delete/@_tasks.TaskGUID" class="btn btn-danger">刪除</a></td>
        </tr>
        }

    </tbody>
</table>


