@model ProjectManager.Models.BoardVM
@{
    ViewBag.Title = "選擇專案";
}
@section style{
<style>
    .ProjectFlex_a {
        display: flex;
        flex-wrap:wrap;
    }
    .projectLink {
        position: absolute;
        width: 100%;
        height: 100%;
        display: block;
    }
    .progressBar {
        position: absolute;
        top: 37.5%;
        left: 50%;
        margin-left: -70px;
        background-color: #fff;
        width: 140px;
        height: 20px;
        margin-top: -10px;
        border-radius: 5px;
    }
    .bar {
        position: absolute;
        top: 37.5%;
        left: 50%;
        margin-left: -70px;
        background-color: #ffd800;
        width: 100px;
        height: 20px;
        margin-top: -10px;
        border-radius: 5px 0 0 5px;
    }
    .barNum {
        position: absolute;
        top: 37.5%;
        left:40px;
        margin-top: -12px;
    }
    .project p {
        width: 100%;
        color: #000;
        position: absolute;
        bottom: 0;
        text-align: center;
        line-height: 50px;
        margin: 0;
        background-color: #fff;
        border: 1px solid #808080;
    }
    .topnav a {
        cursor: pointer;
    }

        .topnav a:hover {
            border-bottom: 3px solid;
        }
</style>
}

<nav>
    <div class="topnav nav nav-tabs nav-fill " id="nav-tab" role="tablist">
        <a class="nav-item nav-link" id="selectProject" role="tab" aria-controls="nav-home" aria-selected="true">選擇專案</a>
        <a class="nav-item nav-link" id="allTasks" role="tab" aria-controls="nav-home" aria-selected="true">任務總覽</a>
    </div>
</nav>
<div id="PartialView" class="hide">
</div>
<div class="ProjectFlex_a container mt-5">

    @foreach (var p in Model.ProjectMember)
    {
        <a href="@Url.Action("Index", "SelectMBoard",new {id=p.ProjectGUID })">
            <div class="card d-inline-block mr-3 mb-2 " style="width:18rem;">
                <div class="card-header bg-dark">
                    <span class="text-light">完成比率</span>
                    <div class="progress">

                        <div class="progress-bar" role="progressbar" style="width: 58%;" aria-valuenow="58" aria-valuemin="0" aria-valuemax="100">58%</div>
                    </div>
                    <span class="text-light">實際工期節省比率</span>
                    <div class="progress ">
                        <div class="progress-bar " role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                    </div>
                </div>
                <div class="card-footer text-center text-muted ">
                    <div class="row align-items-center">
                        <div class="col-2"></div>
                        <div class="col-8 small">@p.Project.ProjectName</div>
                        <div class="col-2">
                            <i class="far fa-check-square" style="color:black" data-toggle="tooltip" title="" data-original-title="總經理關注"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }

</div>
@section script{
    <script>
        $(".project").css({
            "width": "200px",
            "height": "150px",
            "background-color": "#000",
            "margin": "10px",
            "position": "relative",
            "border-radius": "15px 15px 0 0"
        });
        $(document).ready(function () {
            $('#nav-tab > #allTasks').click(function () {
                var PartialView = $("#PartialView");
                PartialView.load("/SelectProject/AllTasks", {}, function () {
                }).show();
                $('.ProjectFlex_a').hide();
                
            })
            $('#nav-tab > #selectProject').click(function () {
                var PartialView = $("#PartialView");
                $('.ProjectFlex_a').show();
                PartialView.hide();

            })

        })
    </script>
}